{
  "name": "@standardnotes/snjs-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.19.0 <16.0.0"
  },
  "scripts": {
    "test:ruby": "bash test.sh ruby",
    "test:js": "bash test.sh js",
    "test": "yarn test:ruby && yarn test:js",
    "test:dev": "mocha-headless-chrome --timeout 1200000 -f http://localhost:9001/test/test.html",
    "start": "lerna run start --parallel",
    "start:test-server": "node test-server.js",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "publish-packages": "lerna publish from-package --yes"
  },
  "pre-push": [
    "lint"
  ],
  "devDependencies": {
    "@types/node": "^12.12.30",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@types/mocha": "^7.0.2",
    "@types/chai": "^4.2.11",
    "chai": "^4.2.0",
    "mocha": "^7.1.0",
    "mocha-headless-chrome": "^3.1.0",
    "serve-static": "^1.14.1",
    "sinon": "^9.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lerna": "^3.22.1",
    "pre-push": "^0.1.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5"
  }
}
