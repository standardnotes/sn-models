{
  "name": "@standardnotes/snjs-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.19.0 <16.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test:ruby": "bash test.sh ruby",
    "test:js": "bash test.sh js",
    "test": "lerna run test --parallel",
    "test:e2e": "yarn test:ruby && yarn test:js",
    "test:dev": "mocha-headless-chrome --timeout 1200000 -f http://localhost:9001/test/test.html",
    "start": "lerna run start --parallel",
    "start:test-server": "node test-server.js",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "publish-packages": "lerna publish from-package --yes"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "lerna": "^3.22.1"
  }
}
