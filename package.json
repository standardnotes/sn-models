{
  "name": "@standardnotes/snjs",
  "version": "2.0.39",
  "engines": {
    "node": ">=14.0.0 <16.0.0"
  },
  "main": "dist/snjs.js",
  "types": "dist/@types",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "webpack -w --config webpack.dev.js",
    "bundle": "webpack --config webpack.prod.js && yarn tsc",
    "docs": "jsdoc -c jsdoc.json",
    "tsc": "tsc --project lib/tsconfig.json && tscpaths -p lib/tsconfig.json -s lib -o dist/@types",
    "start:test-server": "node test-server.js",
    "test:ruby": "bash test.sh ruby",
    "test:js": "bash test.sh js",
    "test": "yarn test:ruby && yarn test:js",
    "test:dev": "mocha-headless-chrome --timeout 1200000 -f http://localhost:9001/test/test.html",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@standardnotes/sncrypto-web": "^1.2.9",
    "@types/chai": "^4.2.11",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.30",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "circular-dependency-plugin": "^5.2.0",
    "connect": "^3.7.0",
    "docdash": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "exports-loader": "^0.7.0",
    "lodash": "^4.17.19",
    "mocha": "^7.1.0",
    "mocha-headless-chrome": "^3.1.0",
    "pre-push": "^0.1.1",
    "regenerator-runtime": "^0.13.5",
    "script-loader": "^0.7.2",
    "serve-static": "^1.14.1",
    "sinon": "^9.0.2",
    "ts-loader": "^7.0.5",
    "tscpaths": "0.0.9",
    "typescript": "^3.9.5",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@standardnotes/sncrypto-common": "^1.2.9"
  },
  "pre-push": [
    "lint"
  ]
}
